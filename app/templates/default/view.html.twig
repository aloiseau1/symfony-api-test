{% extends "base.html.twig" %}

{% block javascripts %}
    <script src={{ asset('js/default/view.js') }}></script>
{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center align-items-center flex-column">
        <div class="d-flex align-items-center flex-column w-50">
            <div class="mt-3">
                <button type="button" class="btn btn-light" onClick="startRequestCommunes()">
                    Lancer requête stream pour les communes
                </button>
            </div>
        </div>
        <div class="d-flex align-items-center flex-column w-50 mt-5">
            <form>
                <div class="form-group">
                    <label for="porteCount">Nombre de porte à créer</label>
                    <input id="porteCount" name="porteCount" type="number" class="form-control">
                </div>
                <div class="form-group">
                    <label for="prefixName">Préfix nom de porte</label>
                    <input id="prefixName" name="prefixName" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label for="comments">Commentaire</label>
                    <input id="comments" name="comments" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label for="version">Version</label>
                    <input id="version" name="version" type="number" class="form-control">
                </div>
            </form>
            <div class="mt-3">
                <button type="button" class="btn btn-light" onClick="startRequestPortes()">
                    Lancer requête stream pour les portes
                </button>
            </div>
            <div class="progress w-100 mt-3">
                <div id="progress-bar-portes" class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
        </div>
        <div class="d-flex align-items-center flex-column w-50">
            <div class="mt-3">
                <button type="button" class="btn btn-light" onClick="startRequestDeletePorte()">
                    Lancer requête pour supprimer les portes
                </button>
            </div>
        </div>
    </div>
{% endblock %}